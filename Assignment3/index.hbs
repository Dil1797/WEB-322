<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Gallery</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

    {{> header }}  <!-- âœ… Include the partial here -->

    <div class="container">
        <!-- Selection Section -->
        <div class="selection-section">
            <form action="/image" method="post">              
                <select name="image" id="image" class="blue-dropdown">
                    <option value=""> </option>  <!-- Default empty option -->
                    {{#each images}}
                        <option value="{{FILENAME}}">{{removeExtension FILENAME}}</option>
                    {{/each}}
                </select>

                <br><br> 

                <button type="submit" class="submit-btn">Submit</button>
            </form>
        </div>

        <!-- Gallery Section -->
        <div class="gallery-section">
            <div class="image-centerer">
                <div class="image-box">
                    <img 
                        src="/images/{{#if selectedImage}}{{selectedImage}}{{else}}Gallery.jpg{{/if}}" 
                        alt="Selected Image"
                        ondblclick="handleImageClick('{{selectedImage}}')" 
                        onerror="this.src='/images/Gallery.jpg'">
                </div>

                {{#if selectedImage}}
                    <p class="image-name">{{removeExtension selectedImage}}</p>
                {{/if}}
            </div>
        </div>
    </div>

    <script>
        function handleImageClick(image) {
            if (image && image !== "Gallery.jpg") {
                window.location.href = `/order/${image}`;
            }
        }
    </script>
</body>
</html>